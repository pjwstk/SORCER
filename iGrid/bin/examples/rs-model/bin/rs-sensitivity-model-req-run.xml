<?xml version="1.0"?>

<project name="Rosen-Suzuki Model Requestor" default="run.rs-response-model-requestor" basedir=".">

	<!-- loads system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="webster: ${provider.webster.url}" />
	<property name="webster" value="${provider.webster.url}" />

	<!-- set property values here -->
	<property name="requestor.name" value="rs-model-ex7" />

	<path id="project.classpath">
		<pathelement location="${sorcer.lib}/${requestor.name}.jar" />
		<pathelement location="${sorcer.lib}/sorcer-lib.jar" />
		<pathelement location="${sorcer.lib}/sorcer-modeling-lib.jar" />
		<pathelement location="${jini.lib}/jsk-lib.jar" />
		<pathelement location="${jini.lib}/jsk-platform.jar" />
		<pathelement location="${rio.lib}/rio.jar" />
		<pathelement location="${common.lib}/jep-2.4.1a.jar" />
	</path>

	<!-- provider codeabse jars -->
	<property name="j1" value="${webster}/${requestor.name}-dl.jar" />
	<property name="j2" value="${webster}/sorcer-prv-dl.jar" />
	<property name="j3" value="${webster}/sorcer-lib.jar" />


	<target name="run.rs-response-model-requestor">
		<property name="requestor.class" value="sorcer.rs.ex7.model.RsSensitivityModelBuilder" />
		<java classname="${requestor.class}" fork="yes">
			<classpath refid="project.classpath" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/rs-model-req.policy" />
			<sysproperty key="java.rmi.server.codebase" value="${j1} ${j2} ${j3}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="requestor.properties" value="../configs/rs-model.properties" />
		</java>
	</target>

</project>



