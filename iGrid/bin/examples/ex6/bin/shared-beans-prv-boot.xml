<?xml version="1.0"?>
<!-- 
Replace "provider.name" with your provider name and specify property value for "provider.class."
Also you might need to adjust the classpath (provider.classpath) for your provider 
-->

<project name="Running Smart Arithmeric" default="run.provider" basedir=".">

	<!-- system environment variables -->
	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />
	<echo message="IGRID_HOME: ${iGrid.home}" />

	<!-- set property values here -->
	<property name="provider.bean" value="beans" />
	<property name="provider.class" value="sorcer.core.provider.ServiceTasker" />
	<property name="webster" value="${provider.webster.url}" />

	<!-- provider classpath -->
	<path id="project.classpath">
		<pathelement location="${sorcer.lib}/arithmetic-beans.jar" />
		<pathelement location="${sorcer.lib}/sorcer-prv.jar" />
		<pathelement location="${sorcer-ext.lib}/webster.jar" />
		<pathelement location="${sorcer.lib}/sorcer-lib.jar" />
		<pathelement location="${sorcer.lib}/sorcer-modeling-lib.jar" />
		<pathelement location="${jini.lib}/jsk-lib.jar" />
		<pathelement location="${jini.lib}/jsk-platform.jar" />
		<pathelement location="${jini.lib}/serviceui.jar" />
		<pathelement location="${rio.lib}/rio.jar" />
		<pathelement location="${common.lib}/je-4.1.21.jar" />
	</path>

	<!-- provider codeabse jars -->
	<property name="j1" value="arithmetic-dl.jar" />
	<property name="j2" value="sorcer-prv-dl.jar" />
	<property name="j3" value="jsk-dl.jar" />
	<property name="j4" value="provider-ui.jar" />
	<property name="j5" value="exertlet-ui.jar" />
	<property name="j6" value="rio-api.jar" />

	<!-- boot provider -->
	<target name="run.provider">
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="${iGrid.home}/configs/startup-boot-prv.config" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<sysproperty key="sorcer.provider.config" value="../configs/${provider.bean}-prv.config" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/arithmetic-beans-prv.policy" />
			<sysproperty key="sorcer.provider.codebase.jars" value="${j1} ${j2} ${j3} ${j4} ${j5} ${j6}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
		</java>
	</target>

</project>